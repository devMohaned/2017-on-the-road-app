<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/ID_item_from_and_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="From California To Amesterdam"
       android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:layout_margin="4dp"
        />


    <TextView
        android:id="@+id/ID_item_description_of_ride"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/description"
        android:layout_below="@id/ID_item_from_and_to"
        android:layout_toStartOf="@id/ID_message_ride"
        android:layout_alignParentStart="true"
        android:layout_marginStart="8dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"/>

    <TextView
        android:id="@+id/ID_item_date_of_ride"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="24/7/2018"
        android:textSize="14sp"
        android:layout_below="@id/ID_item_description_of_ride"
        android:layout_marginStart="8dp"/>


    <ImageButton
        android:id="@+id/ID_remove_ride"
        android:src="@drawable/baseline_delete_forever_black_36"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ID_item_from_and_to"
        android:background="@android:color/transparent"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="2dp"
        android:layout_alignParentEnd="true"/>

    <FrameLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_dark_grey">


    </FrameLayout>

</RelativeLayout>