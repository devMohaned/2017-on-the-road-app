<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/ID_item_from_and_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="From City To City"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/ID_ride_fare"
       android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:layout_margin="4dp"
        />

    <TextView
        android:id="@+id/ID_ride_fare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:textColor="#008000"
        android:text="5"/>

    <TextView
        android:id="@+id/ID_item_description_of_ride"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/description"
        android:layout_below="@id/ID_item_from_and_to"
        android:layout_toStartOf="@id/ID_message_ride"
        android:layout_alignParentStart="true"
        android:layout_marginStart="8dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"/>



    <RatingBar
        android:theme="@style/RatingBar"
        android:id="@+id/ID_rating_of_user_ride"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ID_item_description_of_ride"
        style="@style/Base.Widget.AppCompat.RatingBar.Small"
        android:numStars="5"
        android:layout_marginStart="4dp"
        android:stepSize="0.5" />


    <TextView
        android:id="@+id/ID_rating_score_ride"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/ID_rating_of_user_ride"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        android:layout_below="@id/ID_item_description_of_ride"
        android:text="0"
        android:textColor="@color/orange_item_two"
        android:layout_marginStart="2dp"/>

    <TextView
        android:id="@+id/ID_item_date_of_ride"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="24/7/2018"
        android:textSize="14sp"
        android:layout_below="@id/ID_rating_of_user_ride"
        android:layout_marginStart="8dp"/>


    <ImageButton
        android:id="@+id/ID_message_ride"
        android:src="@drawable/ic_message_black_36dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ID_item_from_and_to"
        android:background="@android:color/transparent"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="2dp"
        android:layout_toStartOf="@id/ID_share_ride"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"/>

    <ImageButton
        android:id="@+id/ID_share_ride"
        android:src="@drawable/icon_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ID_item_from_and_to"
        android:background="@android:color/transparent"
        android:layout_alignParentEnd="true"  />

    <FrameLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_dark_grey">


    </FrameLayout>

</RelativeLayout>